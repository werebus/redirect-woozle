map $host $target_host {
<% @redirects.each do |redirect| -%>
  <%= redirect['from'] %> <%= redirect['to'] %>;
<% end -%>
}

map $host $redirect_code {
<% @redirects.each do |redirect| -%>
  <%= redirect['from'] %> <%= redirect['code'] || 301 %>;
<% end -%>
}

server {
  listen <%= ENV.fetch 'PORT', '80' %>;
  server_name _;
  keepalive_timeout 5;
  client_max_body_size <%= ENV.fetch 'CLIENT_MAX_BODY_SIZE', '1' %>M;

  location = '/up' {
    default_type text/json;
    return 200 '{ "status": "ok" }';
  }

  location '/' {
    return $redirect_code $http_x_forwarded_proto://$target_host$request_uri;
  }
}
